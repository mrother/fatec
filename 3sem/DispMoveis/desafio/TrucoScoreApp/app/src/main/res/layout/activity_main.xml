<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Team A -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/team_a"
                    android:textAllCaps="true"
                    android:textColor="@color/colorText"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/player1_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="0"
                    android:textColor="@color/colorText"
                    android:textSize="68sp" />

                <Button
                    android:id="@+id/increaseOneInPlayerOneButton"
                    style="@style/ButtonOutline"
                    android:onClick="increasePlayerOne"
                    android:tag="1"
                    android:text="+1" />

                <Button
                    android:id="@+id/increaseThreeInPlayerOneButton"
                    style="@style/ButtonOutline"
                    android:onClick="increasePlayerOne"
                    android:tag="3"
                    android:text="+3" />

                <Button
                    android:id="@+id/increaseSixInPlayerOneButton"
                    style="@style/ButtonOutline"
                    android:onClick="increasePlayerOne"
                    android:tag="6"
                    android:text="+6" />

                <Button
                    android:id="@+id/increaseNineInPlayerOneButton"
                    style="@style/ButtonOutline"
                    android:onClick="increasePlayerOne"
                    android:tag="9"
                    android:text="+9" />

                <Button
                    android:id="@+id/increaseTwelveInPlayerOneButton"
                    style="@style/ButtonOutline"
                    android:onClick="increasePlayerOne"
                    android:tag="12"
                    android:text="+12" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"></View>

            <!-- Team B -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/team_b"
                    android:textAllCaps="true"
                    android:textColor="@color/colorText"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/player2_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="0"
                    android:textColor="@color/colorText"
                    android:textSize="68sp" />

                <Button
                    android:id="@+id/increaseOneInPlayerTwoButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_outline_border"
                    android:onClick="increasePlayerTwo"
                    android:tag="1"
                    android:text="+1"
                    android:textColor="@color/colorText" />

                <Button
                    android:id="@+id/increaseThreeInPlayerTwoButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_outline_border"
                    android:onClick="increasePlayerTwo"
                    android:tag="3"
                    android:text="+3"
                    android:textColor="@color/colorText" />

                <Button
                    android:id="@+id/increaseSixInPlayerTwoButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_outline_border"
                    android:onClick="increasePlayerTwo"
                    android:tag="6"
                    android:text="+6"
                    android:textColor="@color/colorText" />

                <Button
                    android:id="@+id/increaseNineInPlayerTwoButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_outline_border"
                    android:onClick="increasePlayerTwo"
                    android:tag="9"
                    android:text="+9"
                    android:textColor="@color/colorText" />

                <Button
                    android:id="@+id/increaseTwelveInPlayerTwoButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_outline_border"
                    android:onClick="increasePlayerTwo"
                    android:tag="12"
                    android:text="+12"
                    android:textColor="@color/colorText" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_outline_border"
                android:onClick="resetScore"
                android:text="Limpar"
                android:textColor="@color/colorText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_outline_border"
                android:onClick="undoScore"
                android:text="Desfazer"
                android:textColor="@color/colorText" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>